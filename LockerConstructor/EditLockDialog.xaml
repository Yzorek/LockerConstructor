<Window x:Class="LockerConstructor.EditLockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LockerConstructor"
        mc:Ignorable="d"
		WindowStartupLocation="CenterOwner"
        Title="EditLockDialog" Height="110" Width="180"
		ResizeMode="NoResize">
    <Grid>
		<StackPanel Margin="0,10,0,10">
			<ComboBox Width="110" Height="20"  x:Name="LockTypeBox">
				<ComboBoxItem Content="H1" />
				<ComboBoxItem Content="H2" />
				<ComboBoxItem Content="H3" />
				<ComboBoxItem Content="H4" />
				<ComboBoxItem Content="HZ" />
			</ComboBox>
			<Button Content="Modifier" VerticalAlignment="Top" HorizontalAlignment="Center" Width="75" Name="EditLockButton" Margin="10" Click="EditLockButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
